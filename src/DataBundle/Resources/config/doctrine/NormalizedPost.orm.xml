<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="DataBundle\Entity\NormalizedPost" table="NormalizedPost">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="content" type="text" column="content" nullable="true">
            <options>
                <option name="fixed"/>
            </options>
        </field>
        <field name="lang" type="string" column="lang" length="255" nullable="false">
            <options>
                <option name="fixed"/>
            </options>
        </field>
        <field name="tags" type="string" column="tags" length="255" nullable="false">
            <options>
                <option name="fixed"/>
            </options>
        </field>
        <field name="score" type="integer" column="score" >
            <options>
                <option name="fixed"/>
            </options>
        </field>
        <field name="created_at" type="datetime" column="created_at" >
            <options>
                <option name="fixed"/>
            </options>
        </field>
        <field name="source" type="string" column="source" >
            <options>
                <option name="fixed"/>
            </options>
        </field>
    </entity>
</doctrine-mapping>